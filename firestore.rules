rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return request.auth.uid == 'Q1IUkKWf7cTBKmeSLK2hGonabwV2';
    }

    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if isAdmin();
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if false;
    }
    
    // -- REGRAS PARA ACCESS CODES --

    match /access_codes/{codeId} {
        // Admins podem fazer qualquer operação de leitura (get, list) ou escrita (create, update, delete).
        allow read, write: if isAdmin();

        // Usuários normais podem APENAS fazer a atualização específica de usar um código.
        allow update: if isSignedIn()
                     && request.resource.data.isUsed == true
                     && resource.data.isUsed == false
                     && request.resource.data.keys().hasAll(['isUsed', 'generatedNumbers', 'usedAt', 'email', 'createdAt']);
    }
  }
}
