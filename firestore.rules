/**
 * This ruleset enforces a strict user-ownership model and manages access codes
 * for the 'Mega Hacker Virada' application.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for reusable logic
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }
    
    function isAdmin() {
      // The admin UID with elevated privileges.
      return request.auth.uid == 'Q1IUkKWf7cTBKmeSLK2hGonabwV2';
    }

    // Validates that the user's ID in the document data matches the path on create.
    function hasValidUserDataOnCreate(userId) {
      return request.resource.data.id == userId;
    }

    // Enforces that the user's ID in the document cannot be changed on update.
    function isUserDataImmutable() {
      return request.resource.data.id == resource.data.id;
    }

    /**
     * @description Controls access to a user's own profile document.
     * @allow (list): Admins can list all users.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if isAdmin();
      allow create: if isOwner(userId) && hasValidUserDataOnCreate(userId);
      allow update: if isExistingOwner(userId) && isUserDataImmutable();
      allow delete: if false;
    }
    
    // -- REGRAS PARA ACCESS CODES --

    // REGRA 1: Permissão para a COLEÇÃO INTEIRA
    // Permite que o administrador liste os documentos (essencial para as páginas do painel de admin).
    match /access_codes {
      allow list: if isAdmin();
    }

    // REGRA 2: Permissão para DOCUMENTOS INDIVIDUAIS
    // Controla o acesso a documentos específicos dentro da coleção.
    match /access_codes/{codeId} {
        // Admins podem ler (get) e escrever (create, update, delete) em qualquer documento individual.
        allow get, write: if isAdmin();

        // Usuários normais (não-admins) podem APENAS fazer a atualização específica de usar um código.
        allow update: if isSignedIn()
                     && request.resource.data.isUsed == true
                     && resource.data.isUsed == false
                     && request.resource.data.keys().hasAll(['isUsed', 'generatedNumbers', 'usedAt', 'email', 'createdAt']);
    }
  }
}
